{
  "name": "eskit",
  "version": "3.0.0",
  "description": "Libary for simplifying development of event-sourced applications",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/authentik8/event-sourcing-kit",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "lerna run build",
    "lint": "tslint --project . && prettier \"packages/*/src/**/*.ts\" --list-different",
    "lint:fix": "tslint --project . --fix && prettier \"src/**/*.ts\" --fix",
    "release": "run-s lint build test && lerna publish",
    "test": "jest",
    "watch": "jest --watch"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "test": "Unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/debug": "^4.1.4",
    "@types/jest": "^24.0.13",
    "@types/node": "^11.10.5",
    "babel-jest": "^24.8.0",
    "babel-plugin-parameter-decorator": "^1.0.7",
    "codecov": "^3.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "opn-cli": "^4.0.0",
    "prettier": "^1.15.2",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.1.6"
  },
  "ava": {
    "failFast": true,
    "files": [
      "packages/**/*.spec.js"
    ],
    "require": [
      "reflect-metadata"
    ],
    "sources": [
      "packages/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "crlf"
  }
}
